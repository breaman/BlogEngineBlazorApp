@page "/account/register"
<h3>Register</h3>

<div>
    <div class="pt-2 text-sm text-red-500 px-8" style="@(_identityErrors.Count > 0 ? "display: block" : "display: none")">
        <ul>
            @foreach (var errorMessage in _identityErrors)
            {
                <li>@errorMessage.Description</li>
            }
        </ul>
    </div>
    <EditForm Model="Dto" FormName="register" OnValidSubmit="RegisterUser" method="post">
        <FluentValidationValidator @ref="_fluentValidationValidator" DisableAssemblyScanning="true"/>
        <ValidationSummary class="text-sm text-red-500 px-8" role="alert"/>
        <div class="field label border small-round">
            <InputText @bind-Value="Dto.Email" id="email" autocomplete="username" placeholder=" "/>
            <label for="email">Email</label>
        </div>
        <div class="field label border small-round">
            <InputText type="password" @bind-Value="Dto.Password" id="password" placeholder=" "/>
            <label for="password">Password</label>
        </div>
        <div class="field label border small-round">
            <InputText type="password" @bind-Value="Dto.ConfirmPassword" id="confirmPassword" placeholder=" "/>
            <label for="confirmPassword">Confirm Password</label>
        </div>
        <div class="field label border small-round">
            <InputText @bind-Value="Dto.FirstName" id="firstName" placeholder=" "/>
            <label for="firstName">First Name</label>
        </div>
        <div class="field label border small-round">
            <InputText @bind-Value="Dto.LastName" id="lastName" placeholder=" "/>
            <label for="lastName">Last Name</label>
        </div>
        <button type="submit" class="bg-cyan-500 text-white h-10 px-4 mt-2 rounded-xl">Register</button>
    </EditForm>
</div>